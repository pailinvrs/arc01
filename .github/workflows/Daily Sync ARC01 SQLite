name: Daily Sync ARC01 SQLite

on:
  workflow_dispatch: {}
  schedule:
    # 00:00 ICT (UTC+7) = 17:00 UTC ของวันก่อนหน้า
    - cron: "0 17 * * *"

permissions:
  contents: write

jobs:
  sync:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install deps
        run: |
          python -m pip install --upgrade pip
          pip install requests

      - name: Run updater
        env:
          API_BASE: https://archcu-digitaltwin.mamgistics.com
          DB_PATH: arc01.db
        run: |
          python scripts/update_sqlite.py

      # ✅ สร้าง/อัปเดต release (แท็กคงที่) แล้วอัปโหลด arc01.db เป็น asset
      - name: Upload arc01.db to release (tag=sqlite-latest)
        uses: softprops/action-gh-release@v2
        with:
          tag_name: sqlite-latest           # ใช้แท็กคงที่ → ดาวน์โหลดได้ URL เดิมทุกวัน
          name: "ARC01 SQLite (latest)"
          draft: false
          prerelease: false
          files: |
            arc01.db
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
